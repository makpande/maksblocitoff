<h1>Todo Items List</h1>
<br/>
<%= link_to "New Task", new_item_path, class: "btn btn-primary" %>

  <div class="row">
    <div class="col-md-12">
    </br>
      <% @items.each_with_index do |item, i| %>
        <div class="media">
          <div class="media-body lead">
            <small> <%=(i+1)%>)  <%= item.name%>
            <span class="pull-right">
              <class="pull-right">Expires - <%= item.expiration.to_date.to_formatted_s(:long_ordinal)%>
              <%= link_to "Delete", item, method: :delete, data: {confirm: 'Are you sure you want to delete this To Do Item>'}%>
              <%= form_for item, :method => :put do |f| %>
                <%= f.hidden_field :status, :value=> "done"%>
                <%= link_to "Done", item_done_path(item) %>
              <% end %>
            </small>
            </span>
            </br>
          </div>
        </div>
      <%end%>
    </div>
</div>
